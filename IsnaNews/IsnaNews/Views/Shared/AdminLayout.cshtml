                                                <path d="M12.268 5.871h13.861v1.066h-13.861v-1.066z" fill="#000000">
                                                </path>
                                                <path d="M12.268 20.265h13.861v1.066h-13.861v-1.066z" fill="#000000">
                                                </path>
                                                <path d="M12.268 23.997h13.861v1.066h-13.861v-1.066z" fill="#000000">
