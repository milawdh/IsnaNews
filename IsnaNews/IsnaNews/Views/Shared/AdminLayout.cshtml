                </li>
                @await Component.InvokeAsync("AdminList", userAdminPermissions)
            </ul>
        </section>
        <!--SideBar End-->
        <!--Body start-->
        <section class="flex-fill _scrollBar h-100">

            <!--On Mobile Nav Start-->
            <nav class="navbar bg-dark navbar-dark" id="OnMobileNavbar">
                <div class="container-fluid">
                    <img src="@Url.Content("~/Resources/NoPofile.jpg")" width="60" class="navbar-brand rounded-circle">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#OnMobileNavbarList">
