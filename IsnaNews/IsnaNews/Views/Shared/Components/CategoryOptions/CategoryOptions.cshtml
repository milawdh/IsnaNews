@model (List<DataLayer.Models.TblCategory> Cateogories,int SelectedCategory)
@foreach (var item in Model.Cateogories)
{
    @if (item.Id != Model.SelectedCategory || Model.SelectedCategory == 0)
    {
        <option value="@item.Id">@item.Name</option>
    }
    else
    {
        <option selected value="@item.Id">@item.Name</option>
    }

}



